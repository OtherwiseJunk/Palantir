<h1>High Rollers - Casino Leaderboard</h1>

<% if @casino_user_stats.empty? %>
  <p>No casino activity found to display.</p>
<% else %>
  <div class="high-rollers-grid">
    <% @casino_user_stats.each do |stat| %>
      <div class="high-roller-card">
        <h3 class="card-title"><%= stat[:display_name] %></h3>
        <p class="stat-line">
          <span class="stat-label">Winnings:</span>
          <span class="stat-value stat-winnings"><%= stat[:winnings] %></span>
        </p>
        <p class="stat-line">
          <span class="stat-label">Losses:</span>
          <span class="stat-value stat-losses"><%= stat[:losses] %></span>
        </p>
        <p class="stat-line">
          <span class="stat-label">Net:</span>
          <span class="stat-value <%= stat[:net] >= 0 ? 'stat-winnings' : 'stat-losses' %>"><%= stat[:net] %></span>
        </p>
      </div>
    <% end %>
  </div>
<% end %>

<style>
  .high-rollers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 20px;
    padding: 20px 0;
  }
  .high-roller-card {
    border: 1px solid #008800;
    border-radius: 8px;
    padding: 15px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.05);
  }
  .high-roller-card .card-title {
    margin-top: 0;
    margin-bottom: 12px;
    font-size: 1.1em;
    word-break: break-all;
  }
  .high-roller-card .stat-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 8px 0;
    font-size: 1em;
  }
  .high-roller-card .stat-value {
    font-weight: bold;
  }
  .stat-winnings {
    color: #28a745;
  }
  .stat-losses {
    color: #dc3545;
  }
</style>
